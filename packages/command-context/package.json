{
    "name": "@zhycorp/command-context",
    "description": "Wrapping all sapphire command (interaction, message) to one context",
    "author": "Zhycorp <contact@zhycorp.org>",
    "version": "0.0.0",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "license": "AGPL-3.0",
    "homepage": "https://zhycorp.org/",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zhycorp/sapphire-plugins.git"
    },
    "bugs": {
        "url": "https://github.com/zhycorp/sapphire-plugins/issues"
    },
    "readme": "https://github.com/zhycorp/sapphire-plugins/blob/main/README.md",
    "engines": {
        "node": ">=16.6.0",
        "npm": ">=7.0.0"
    },
    "scripts": {
        "build": "rimraf dist && unbuild && tsc",
        "lint": "eslint src",
        "lint:fix": "eslint src --fix",
        "format": "prettier --write {src,tests}/**/*.ts",
        "prepareForRelease": "npm run build && npm run format && npm run lint && npm run lint:fix",
        "test": "jest test",
        "release": "npm publish --access public"
    },
    "eslintConfig": {
        "extends": "@hazmi35/eslint-config/typescript",
        "ignorePatterns": "dist/*"
    },
    "prettier": "@sapphire/prettier-config",
    "devDependencies": {
        "@hazmi35/eslint-config": "^8.3.0",
        "@sapphire/prettier-config": "1.4.1",
        "eslint": "8.14.0",
        "prettier": "2.6.0",
        "rimraf": "3.0.2",
        "typescript": "4.6.2",
        "unbuild": "0.7.0"
    }
}
