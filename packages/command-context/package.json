{
    "name": "@zhycorp/command-context",
    "description": "Wrapping all sapphire command (interaction, message) to one context",
    "author": "Zhycorp <contact@zhycorp.org>",
    "version": "0.0.0",
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "files": [
        "dist/**/*.js*",
        "dist/**/*.mjs*",
        "dist/**/*.d*"
    ],
    "license": "AGPL-3.0",
    "homepage": "https://github.com/zhycorp/sapphire-plugins/tree/main/packages/command-context",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/zhycorp/sapphire-plugins.git",
        "directory": "packages/command-context"
    },
    "bugs": {
        "url": "https://github.com/zhycorp/sapphire-plugins/issues"
    },
    "readme": "https://github.com/zhycorp/sapphire-plugins/blob/main/README.md",
    "engines": {
        "node": ">=16.6.0",
        "npm": ">=7.0.0"
    },
    "eslintConfig": {
        "extends": "@hazmi35/eslint-config/typescript",
        "ignorePatterns": ["dist/*", "jest.config.ts", "rollup.bundle.ts"],
        "parserOptions": {
            "project": "./tsconfig.eslint.json"
        }
    },
    "scripts": {
        "build": "rimraf dist && tsc -b src && rollup -c rollup.bundle.ts && npm run esm:default",
        "esm:default": "gen-esm-wrapper dist/index.js dist/index.mjs",
        "lint": "eslint src tests --ext ts",
        "lint:fix": "eslint src tests --ext ts",
        "format": "prettier --write {src,tests}/**/*.ts",
        "prepareForRelease": "npm run build && npm run format && npm run lint && npm run lint:fix",
        "test": "jest",
        "release": "npm publish --access public"
    },
    "devDependencies": {
        "gen-esm-wrapper": "^1.1.3",
        "typescript": "4.6.4"
    }
}
