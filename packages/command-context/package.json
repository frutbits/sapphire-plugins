{
    "name": "@frutbits/command-context",
    "version": "3.2.0",
    "description": "Wrapping all sapphire commands (interaction, message) in one context",
    "homepage": "https://github.com/frutbits/sapphire-plugins/tree/main/packages/command-context",
    "bugs": {
        "url": "https://github.com/frutbits/sapphire-plugins/issues"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/frutbits/sapphire-plugins.git",
        "directory": "packages/command-context"
    },
    "license": "AGPL-3.0",
    "author": "FrutBits Indonesia <contact@frutbits.org>",
    "exports": {
        ".": {
            "import": "./dist/index.mjs",
            "require": "./dist/index.js"
        }
    },
    "main": "dist/index.js",
    "module": "dist/index.mjs",
    "files": [
        "dist/**/*.js*",
        "dist/**/*.mjs*",
        "dist/**/*.d*"
    ],
    "scripts": {
        "build": "rimraf dist && tsc -b src && rollup -c rollup.bundle.ts && npm run esm:default",
        "esm:default": "gen-esm-wrapper dist/index.js dist/index.mjs",
        "format": "prettier --write src/**/*.ts",
        "lint": "eslint src --ext ts",
        "lint:fix": "eslint src --fix --ext ts",
        "prepareForRelease": "npm run build && npm run format && npm run lint && npm run lint:fix",
        "release": "npm publish --access public"
    },
    "eslintConfig": {
        "parserOptions": {
            "project": "./tsconfig.eslint.json"
        },
        "extends": "@hazmi35/eslint-config/typescript",
        "ignorePatterns": [
            "dist/*",
            "jest.config.ts",
            "rollup.bundle.ts"
        ]
    },
    "dependencies": {
        "@sapphire/decorators": "^5.0.0",
        "@sapphire/utilities": "^3.9.2",
        "discord.js": "^14.3.0"
    },
    "devDependencies": {
        "@hazmi35/eslint-config": "^8.4.2",
        "@sapphire/framework": "^3.0.0",
        "@sapphire/prettier-config": "^1.4.4",
        "@typescript-eslint/eslint-plugin": "^5.35.1",
        "@typescript-eslint/parser": "^5.35.1",
        "eslint": "8.22.0",
        "gen-esm-wrapper": "^1.1.3",
        "prettier": "^2.7.1",
        "rimraf": "^3.0.2",
        "rollup": "^2.75.7",
        "rollup-plugin-version-injector": "^1.3.3",
        "typescript": "4.7.4"
    },
    "engines": {
        "node": ">=16.6.0",
        "npm": ">=7.0.0"
    },
    "readme": "https://github.com/frutbits/sapphire-plugins/blob/main/packages/command-context/README.md"
}
