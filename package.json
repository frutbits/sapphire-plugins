{
  "name": "@frutbits/sapphire-plugins",
  "private": true,
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "description": "Plugins for sapphire framework",
  "scripts": {
    "clean": "rimraf \"packages/**/dist\" \"packages/**/.turbo\"",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "format": "prettier --write \"packages/**/{src,tests,scripts}/**/*.{mjs,ts,js}\"",
    "test": "turbo run test",
    "build": "turbo run build",
    "update": "yarn upgrade-interactive",
    "check-update": "turbo run check-update",
    "docs": "typedoc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/frutbits/sapphire-plugins.git"
  },
  "keywords": [
    "js",
    "typescript"
  ],
  "author": "FrutBits Indonesia <contact@frutbits.org>",
  "license": "AGPL-3.0",
  "bugs": {
    "url": "https://github.com/frutbits/sapphire-plugins/issues"
  },
  "homepage": "https://frutbits.org/",
  "engines": {
    "node": ">=16.6.0",
    "npm": ">=7.0.0"
  },
  "prettier": "@sapphire/prettier-config",
  "devDependencies": {
    "@hazmi35/eslint-config": "^8.4.2",
    "@sapphire/prettier-config": "1.4.3",
    "@sapphire/ts-config": "^3.3.4",
    "@types/jest": "^28.1.1",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "eslint": "8.17.0",
    "jest": "^28.1.1",
    "jest-circus": "^28.1.1",
    "lerna": "^5.1.1",
    "prettier": "^2.6.2",
    "rimraf": "3.0.2",
    "rollup": "^2.75.6",
    "rollup-plugin-version-injector": "^1.3.3",
    "ts-jest": "^28.0.4",
    "ts-node": "^10.8.1",
    "turbo": "latest",
    "typedoc": "^0.22.17",
    "typedoc-plugin-djs-links": "^1.0.4",
    "typedoc-plugin-mdn-links": "^1.0.6",
    "typescript": "4.7.3"
  },
  "dependencies": {
    "@sapphire/decorators": "^4.3.5",
    "@sapphire/framework": "next",
    "@sapphire/pieces": "^3.3.3",
    "discord.js": "^13.8.0",
    "pino-pretty": "^7.6.1"
  }
}
