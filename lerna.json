{
	"packages": [
		"packages/*"
	],
	"version": "3.2.1",
	"npmClient": "yarn",
	"useWorkspaces": true,
	"command": {
		"publish": {
			"conventionalCommits": true,
			"push": true,
			"ignoreChanges": [
				"**/tests/**"
			],
			"registry": "https://registry.npmjs.org/"
		},
		"version": {
			"allowBranch": "main",
			"conventionalCommits": true,
			"push": true,
			"createRelease": "github",
			"message": "chore(release): publish"
		},
		"create": {
			"license": "AGPL-3.0",
			"keywords": [
				"plugin",
				"bot",
				"typescript",
				"ts",
				"yarn",
				"discord",
				"sapphire"
			]
		}
	}
}